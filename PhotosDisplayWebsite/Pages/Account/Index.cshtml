@page "{uid}"
@model PhotosDisplayWebsite.Pages.Account.IndexModel
@{
    ViewData["Title"] = $"{Model.Account.NickName} 个人主页";
}

@if (Model.IsNotFound)
{
        <h2>请检查 uid 是否正确</h2>
}
else
{
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.NickName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.NickName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.Uid)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.Uid)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.AccountGroup)
            </dt>
            <dd class="col-sm-10" height="21px;">
                @switch (Model.Account.AccountGroup)
                {
                    case 0:
                        <p>管理员</p>
                        break;
                    case 1:
                        <p>用户</p>
                        break;
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.CreateTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.CreateTime)
            </dd>

            <hr />

            <a href="./Delete?uid=@Model.Account.Uid">Delete</a>
        </dl>
    </div>
}