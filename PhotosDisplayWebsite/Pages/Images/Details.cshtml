@page
@model PhotosDisplayWebsite.Pages.Images.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Image</h4>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <a href="~/@Model.Image.FileUrl" target="_blank">
                    <img src="~/@Model.Image.FileUrl" class="img-fluid img-thumbnail rounded" alt="@Model.Image.Title">
                </a>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Image.FileUrl)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Image.FileUrl)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Image.UploadTime)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Image.UploadTime)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Image.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Image.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Image.Uploader)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Image.Uploader)
                    </dd>
                    <a asp-page="./Delete" asp-route-id="@Model.Image.Id">Delete</a>
                </dl>
            </div>
        </div>
    </div>
    <hr />
        
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Image.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
